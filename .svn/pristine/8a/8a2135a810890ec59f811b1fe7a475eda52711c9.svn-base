<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ddit.kixiv.gallery.mapper.GalleryDao">

	<select id="getCmtVO" resultType="kr.ddit.kixiv.gallery.vo.RentCmtVO">
		select 
		        a.cmt_id cmt_id, a.cmt_content cmt_content, a.cmt_date cmt_date, a.del_yn del_yn, a.board_id board_id
		        , a.user_id user_id, a.grp grp, a.rent_seq rent_seq, a.grps grps, a.grpl grpl, b.profile_img profile_img
		        ,(select count(cmt_id) from good_bad  where gb_status = 1 AND cmt_id = a.cmt_id) as good
		        ,(select count(cmt_id) from good_bad  where gb_status = 2 AND cmt_id = a.cmt_id) as bad
		        ,(select count(cmt_id) from good_bad  where gb_status not in (1,2) AND cmt_id = a.cmt_id) as etc
		  from cmt a, users b 
		 where a.user_id = b.user_id
		  and a.rent_seq = #{rent_seq}
		 order by grp asc, case when a.grps=0 then 999999999999 else a.grps end desc
	</select>
	
	<insert id="writeCmtVO">
	    insert into cmt
	    (cmt_id, cmt_content, cmt_date, del_yn, user_id, grp, rent_seq, grps, grpl)
	    values((select NVL(MAX(cmt_id),0) +1 from cmt), #{cmt_content}, sysdate, 'n', #{user_id}, (select NVL(MAX(cmt_id),0)+1 from cmt), #{rent_seq}, 0, 0)
	</insert>
	
	<update id="updCmtVO">
		update cmt
		   set cmt_content = #{cmt_content} 
		 where cmt_id = #{cmt_id}
	</update>
	
	<delete id="delCmtVO">
		update cmt
		   set del_yn = 'y'
		 where cmt_id = #{cmt_id} and grpl = 0
	</delete>
	
 	<insert id="replyWriteCmtVO">
	    insert into cmt
	    (cmt_id, cmt_content, cmt_date, del_yn, user_id, grp, rent_seq, grps, grpl)
	    values((select NVL(MAX(cmt_id),0) +1 from cmt), #{cmt_content}, sysdate, 'n', #{user_id}, #{cmt_id}, #{rent_seq}, (select NVL(MAX(grps),0) +1 from cmt where rent_seq = #{rent_seq} and grp = #{grp}), 1)
	</insert>

	<update id="replyUpdCmtVO">
		update cmt 
		   set cmt_content = #{cmt_content} 
		 where cmt_id = #{cmt_id}
	</update>
	
	<delete id="replyDelCmtVO">
		delete from cmt 
		 where grpl = 1 and cmt_id = #{cmt_id}
	</delete>
	
	<insert id="goodAndBadVO">
		merge 
		 into good_bad a
		using dual
		   on (a.user_id = #{user_id} and a.cmt_id = #{cmt_id})
		 when matched then
		      update 
		         set a.gb_status = #{gb_status}
		 when not matched then
		      insert (a.gb_seq, a.user_id, a.cmt_id, a.gb_status)
		      values ((select NVL(MAX(gb_seq),0) +1 from good_bad), #{user_id}, #{cmt_id}, #{gb_status})
	</insert>
	
</mapper>