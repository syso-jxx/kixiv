<%@include file="include/footer.jsp"%>

<script type="text/javascript">

// imp_uid : 거래 고유 번호

function iamport(){
	
	IMP.init('imp17157197'); // 발급받은 "가맹점 식별코드"를 사용합니다.
	
	// IMP.request_pay(param, callback) 호출
	
	IMP.request_pay({ // param : 결제 승인에 필요한 정보
	    pg : 'html5_inicis',
	    pay_method : 'card',
	    merchant_uid : 'merchant_' + new Date().getTime(), // 주문번호
	    name : '상품1' , //결제창에서 보여질 이름
	    amount : 100, //실제 결제되는 가격
	    buyer_email : 'iamport@siot.do',
	    buyer_name : '구매자이름',
	    buyer_tel : '010-1234-5678',
	}, function(rsp) { // callback : 고객이 결제를 완료한 후 실행되는 함수
		
		console.log("rsp : " + rsp); // rsp는 결제의 성공여부, 결제 정보, 에러 정보 등을 담고있음
		
		// 결제검증
		jQuery.ajax({// jQuery로 HTTP 요청
			method : "POST",
        	url : "/verifyIamport/" + rsp.imp_uid,  // 가맹점 서버 
        	headers : { "Content-Type": "application/json" },
    		data : {
    			rent_imp_uid	: rsp.imp_uid,
    			rent_num 		: rsp.merchant_uid,
       			rent_price 		: rsp.paid_amount,
       			rent_name 		: rsp.buyer_name,
       			rent_email 		: rsp.buyer_email,
       			rent_tel 		: rsp.buyer_tel,
       			rent_req_date 	: rsp.paid_at
    		}
        }).done(function(data) { 
        	console.log(data);
        	// 위의 rsp.paid_amount 와 data.response.amount를 비교한후 로직 실행 (import 서버검증)
        	if(rsp.paid_amount == data.response.amount){ // 결제 성공 시: 결제 승인 또는 가상계좌 발급에 성공한 경우
	        	alert("결제 및 결제검증완료");   // 가맹점 서버 결제 API 성공시 로직
        	} else {
        		alert("결제 실패");
        	}
        });
	});
}

function refund(){
	IMP.init('imp17157197');
	$.ajax({
		url: "/coupon_cancel.do",
		type:"post",
		datatype:"json",
		contentType : 'application/x-www-form-urlencoded; charset = utf-8',
		data : {
			"rent_num" : 00000001,  // 주문번호
			"rent_price" : 100, //환불금액
			"reason": "테스트 결제 환불" //환불사유
		}
	}).done(function(result){ //환불 성공
		console.log("환불 성공 : "+ result);
	}).fail(function(error){
		console.log("환불 실패 : "+ error);
	});//ajax
}

</script>

