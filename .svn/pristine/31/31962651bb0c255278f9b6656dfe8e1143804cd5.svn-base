<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<!DOCTYPE HTML>
<html>
<head>
<meta charset="UTF-8">
<title>KIXIV - 세상의 모든 사진</title>
<meta charset="utf-8">
<%@include file="include/option.jsp"%>
<script src="/asset/js/jquery.min.js"></script>
<link rel="stylesheet"
	href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css" />
<script type="text/javascript" src="https://cdn.iamport.kr/js/iamport.payment-1.1.5.js"></script>
<!-- 아래 제이쿼리는 1.0이상이면 원하는 버전을 사용하셔도 무방합니다. -->
<script type="text/javascript" src="https://code.jquery.com/jquery-1.12.4.min.js" ></script>
<style>

	li	{
		  list-style:none;
	}
</style>
</head>
<%@include file="include/header.jsp"%>
<body>
	<section class="container overflow-hidden py-5">
	<h1 class="text-dark h1" style="text-align: left;">대여/결제</h1>
		<br />	
		<div>
		
		<form>
		
			<table style="width:70%; margin-left: 15%; border:0;">
				<tbody>
					<tr style="font-size:1.2em; border:0;">
						<td>
							<span>결제 내역 확인</span>
						</td>
					</tr>
				</tbody>
			</table>
			<table class="table table-bordered" style="width:70%; margin-left: 15%; ">
				<thead>
					<tr>
						<th style="vertical-align: middle; text-align:center; width:50%;">갤러리 정보</th>
						<th style="vertical-align: middle; text-align:center; width:50%;">결제 내역</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td style="vertical-align: middle; width:50%;">
							갤러리 사진, 이름 삽입
						</td>
						<td style="vertical-align: middle; width:50%;">
							<ul>
								<li><span style="margin-right: 32px;">위치</span>위치정보 들어갈 곳</li>
								<li><span style="margin-right: 15px;">연락처</span>연락처 들어갈 곳</li>
								<li><span style="margin-right: 32px;">기간</span>기간 들어갈 곳</li>
								<li><span style="margin-right: 32px;">가격</span>가격 들어갈 곳</li>
							</ul>
						</td>
					</tr>
				</tbody>
			</table>

			<table style="width:70%; margin-left: 15%;">
				<tbody>
					<tr style="font-size:1.2em;">
						<td>
							<span>이용자 정보 입력</span>
						</td>
					</tr>
				</tbody>
			</table>
			<table class="table table-bordered" style="width:70%; margin-left: 15%;">
				<tbody>
					<tr>
						<th style="vertical-align: middle; text-align:center; width:30%;">이용자 정보 선택</th>
						<td>
							<input type="radio" name="userInfo" style="margin-left: 20px;" checked/> 회원 정보와 동일
							<input type="radio" name="userInfo" style="margin-left: 20px;"/> 새로 입력
						</td>
					</tr>
					<tr>
						<th style="vertical-align: middle; text-align:center; width:30%;">신청자</th>
						<td>
							<input type="text" name="name" value="${galleryRentVO.name}">
							<input type="hidden" name="rent_seq" id="rent_seq" value="${galleryRentVO.rent_seq}">
						</td>
					</tr>
					<tr>
						<th style="vertical-align: middle; text-align:center; width:30%;">이용자</th>
						<td>
							<input type="text" name="rent_name" id="rent_name" value="${galleryRentVO.rent_name}">
						</td>
					</tr>
					<tr>
						<th style="vertical-align: middle; text-align:center; width:30%;">휴대전화번호</th>
						<td>
							<input type="text" placeholder="01X-XXXX-XXXX" name="rent_tel" id="rent_tel" value="${galleryRentVO.rent_tel}">
							<span style="font-size:13px;"> * 실제로 수신이 가능한 연락처를 기재하여 주시기 바랍니다.</span>
						</td>
					</tr>
					<tr>
						<th style="vertical-align: middle; text-align:center; width:30%;">
							이메일주소
						</th>
						<td>
							<input type="text" name="rent_email1" id="rent_email1" style="width:20%;" value="${galleryRentVO.rent_email1}"> @ <input type="text" name="rent_email2" id="rent_email2" style="width:35%;" value="${galleryRentVO.rent_email2}"> 
							 <select name="gallery_choice" id="gallery_choice" style="width:35%;">
							    <option value="none">직접입력</option>
							    <option value="korean">naver.com</option>
							    <option value="english">gmail.com</option>
							    <option value="english">hanmail.net</option>
							    <option value="english">daum.net</option>
							    <option value="english">nate.com</option>
							  </select>
						</td>
					</tr>
				</tbody>
			</table>
			
			
			<table style="width:70%; margin-left: 15%;">
				<tbody>
					<tr style="font-size:1.2em;">
						<td>
							<span>결제 수단 선택</span>
						</td>
					</tr>
				</tbody>
			</table>
			<table class="table table-bordered" style="width:70%; margin-left: 15%;">
				<tbody>
					<tr>
						<td>
							<input type="radio" name="payment" id="inicis" style="margin-left: 20px;"/> 신용카드
						</td>
					</tr>
				</tbody>
			</table>
			<div style="width:70%; text-align: center; margin-left:15%;">
				<input type="button" class="btn btn-dark mt-3" id="iamport"value="결제하기"/>
			</div>
		</form>
	</div>
	</section>
	
<%@include file="include/footer.jsp"%>

<script type="text/javascript">

// imp_uid : 거래 고유 번호

$("#iamport").click(function(){
 
	// json 형식으로 데이터 set
    var params = {
 			rent_seq      	: $("#rent_seq").val()
            , rent_name     : $("#rent_name").val()
            , rent_tel      : $("#rent_tel").val()
            , rent_email1   : $("#rent_email1").val()
            , rent_email2   : $("#rent_email2").val()
            , rent_num		: 'merchant_' + new Date().getTime()
    }
	
	IMP.init('imp17157197');
	IMP.request_pay({
		pg : 'html5_inicis',
 	    pay_method : 'card',
 	    merchant_uid : params.rent_seq,
 	    name : '상품1' , //결제창에서 보여질 이름
 	    amount : 100, //실제 결제되는 가격
 	    buyer_email : params.rent_email1+'@'+params.rent_email2,
 	    buyer_name : params.rent_name,
 	    buyer_tel : params.rent_tel
	}, function(rsp) {
		console.log(rsp);
		// 결제검증
		$.ajax({
        	type : "POST",
        	url : "/verifyIamport/" + rsp.imp_uid 
        }).done(function(data) {
        	// 위의 rsp.paid_amount 와 data.response.amount를 비교한후 로직 실행 (import 서버검증)
        	if(rsp.paid_amount == data.response.amount){
        		$.ajax({
        	        type : "POST",            	   // HTTP method type(GET, POST) 형식이다.
        	        url : "/galleryRentReq",      // 컨트롤러에서 대기중인 URL 주소이다.
        	        data : params,
        	        success : function(res){
		        		alert("결제가 완료되었습니다.");
			        	location.href = "/" ; // *** 마이페이지 결제 내역으로 보내기
        	        }
        		})
        	} else {
        		alert("결제 실패");
        	}
        });
	});
})


$("#refund").click(function(){
	IMP.init('imp17157197');
	$.ajax({
		url: "/coupon_cancel.do",
		type:"post",
		datatype:"json",
		contentType : 'application/x-www-form-urlencoded; charset = utf-8',
		data : {
			"rent_num" : 00000001,  // 주문번호
			"rent_price" : 100, //환불금액
			"reason": "테스트 결제 환불" //환불사유
		}
	}).done(function(result){ //환불 성공
		console.log("환불 성공 : "+ result);
	}).fail(function(error){
		console.log("환불 실패 : "+ error);
	});//ajax
});

</script>

</body>
</html>